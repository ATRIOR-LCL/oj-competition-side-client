{
  "name": "oj-competition-side-client",
  "version": "1.0.0",
  "description": "SDUT OJ 竞赛客户端 - 专业的在线评测系统客户端应用程序",
  "author": {
    "name": "ATRIOR-LCL",
    "email": "sdutwujinhao@gmail.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "org.sdutacm.SDUTOJCompetitionSideClient",
    "productName": "SDUT OJ 竞赛客户端",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "utils/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "version": "1.0.0"
    },
    "mac": {
      "icon": "public/favicon.icns",
      "category": "public.app-category.education",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}_mac_${arch}.${ext}"
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "artifactName": "${productName}_${version}_win_${arch}.${ext}"
    },
    "linux": {
      "icon": "public/icon.png",
      "category": "Education",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}_linux_${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": null
    }
  }
}
