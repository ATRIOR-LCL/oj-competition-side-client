{
  "name": "oj-competition-side-client",
  "version": "1.0.0",
  "description": "SDUT OJ 竞赛客户端 - 专业的在线评测系统客户端应用程序",
  "author": {
    "name": "ATRIOR-LCL",
    "email": "sdutwujinhao@gmail.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:nsis": "electron-builder --win --x64 nsis",
    "build:win:portable": "electron-builder --win --x64 portable",
    "build:mac": "electron-builder --mac",
    "build:mac:zip": "electron-builder --mac --x64 zip",
    "build:mac:dmg": "electron-builder --mac --x64 dmg",
    "fix:mac": "chmod +x scripts/fix-macos.sh && ./scripts/fix-macos.sh",
    "build:linux": "electron-builder --linux",
    "run:linux": "chmod +x scripts/run-linux.sh && ./scripts/run-linux.sh",
    "install:linux": "chmod +x scripts/install-linux.sh && ./scripts/install-linux.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "rcedit": "^4.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "org.sdutacm.SDUTOJCompetitionSideClient",
    "productName": "SDUT OJ 竞赛客户端",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "utils/**/*",
      "public/**/*",
      "locales/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "version": "1.0.0"
    },
    "afterPack": "./scripts/afterPack.js",
    "mac": {
      "icon": "public/favicon.icns",
      "category": "public.app-category.education",
      "identity": null,
      "entitlements": null,
      "entitlementsInherit": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "development",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "SDUTOJCompetitionSideClient_mac_${arch}_${version}.${ext}"
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "executableName": "SDUT OJ 竞赛客户端",
      "artifactName": "SDUTOJCompetitionSideClient_windows_${arch}_${version}.${ext}",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": true,
      "extraFiles": [
        {
          "from": "public/favicon.ico",
          "to": "favicon.ico"
        }
      ],
      "fileAssociations": [],
      "protocols": [],
      "publish": null
    },
    "linux": {
      "icon": "public/icon.png",
      "category": "Education",
      "executableName": "sdut-oj-competition-client",
      "desktop": {
        "entry": {
          "Name": "SDUT OJ Competition Side Client",
          "Comment": "Professional Online Judge System Client",
          "GenericName": "SDUT OJ Competition Side Client",
          "Icon": "sdut-oj-competition-client",
          "Type": "Application",
          "Categories": "Education;Development;",
          "StartupWMClass": "sdut-oj-competition-client",
          "Name[zh_CN]": "SDUT OJ 竞赛客户端",
          "Comment[zh_CN]": "专业的在线评测系统客户端",
          "Keywords": "OJ;ACM;Programming;Contest;Judge;"
        }
      },
      "extraFiles": [
        {
          "from": "public/icon.png",
          "to": "icon.png"
        },
        {
          "from": "public/icon.png",
          "to": "resources/icon.png"
        },
        {
          "from": "build/sdut-oj-competition-client.desktop",
          "to": "sdut-oj-competition-client.desktop"
        }
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "SDUTOJCompetitionSideClient_linux_${arch}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "license": null,
      "artifactName": "SDUTOJCompetitionSideClient_windows_installer_${arch}_${version}.${ext}",
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "installerHeaderIcon": "public/favicon.ico",
      "installerSidebar": null,
      "uninstallerSidebar": null,
      "shortcutName": "SDUT OJ 竞赛客户端",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US",
        "zh_CN"
      ],
      "runAfterFinish": true,
      "menuCategory": "Education",
      "perMachine": false,
      "allowElevation": false,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "SDUTOJCompetitionSideClient_windows_protable_${arch}_${version}.${ext}",
      "requestExecutionLevel": "user"
    }
  },
  "dependencies": {
    "i18n-js": "^4.5.1"
  }
}
