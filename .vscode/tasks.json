{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "启动 OJ 竞赛客户端",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "构建 Windows 版本",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build:win"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "构建 Linux AppImage",
			"type": "shell",
			"command": "npx",
			"args": [
				"electron-builder",
				"--linux",
				"AppImage"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "清理构建目录",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"dist"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}